<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.android.custom.title"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CustomTitleActivity"
            android:label="@string/title_activity_custom_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChangeTitleBarActivity"
            android:label="@string/title_activity_change_title_bar" />
        <activity
            android:name=".HideOldTitleBarActivity"
            android:label="@string/title_activity_hide_old_title_bar" />
        <activity
            android:name=".ThemeTitleActivity"
            android:label="修改窗口主题"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".ChangeTitleLayoutActivity"
            android:label="@string/title_activity_change_title_layout"
            android:theme="@style/MyTheme1" />
    </application>

</manifest>